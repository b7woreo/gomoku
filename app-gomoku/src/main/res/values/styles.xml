<resources>

  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/chessboard_background</item>
    <item name="colorPrimaryDark">@color/chessboard_background</item>
    <item name="colorAccent">@color/chessboard_background</item>
  </style>

  <style name="GomokuTagStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="GomokuButtonStyle">
    <item name="android:textColor">#000000</item>
    <item name="android:backgroundTint">#ffffff</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:gravity">center</item>
  </style>

</resources>
